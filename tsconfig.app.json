{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["types/**/*", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "baseUrl": ".",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["./src/*"],
            "#/*": ["./types/*"]
        }
    }
}
