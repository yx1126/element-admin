{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "types/*",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
        "src/**/*.vue"
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "#/*": ["./types/*"]
        },
        "types": ["vite/client", "element-plus/global"]
    }
}
