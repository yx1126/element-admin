{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "#/*": ["./types/*"]
        },
        "types": ["element-plus/global", "@intlify/unplugin-vue-i18n/messages"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
        "src/**/*.vue",
        "types/**/*.ts",
        "types/**/*.d.ts"
    ],
    "exclude": ["src/**/__tests__/*"]
}